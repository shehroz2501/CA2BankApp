@{
    ViewData["Title"] = "Perform Transaction";
}

<h2>Perform Transaction</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddMoney" method="post" class="needs-validation" novalidate>
            <div class="form-group">
                <label for="addAmount">Add Amount:</label>
                <input type="number" class="form-control" id="addAmount" name="amount" required />
                <div class="invalid-feedback">Please provide an amount.</div>
            </div>
            <div class="form-group">
                <label for="accType">Account Type:</label>
                <input type="text" class="form-control" id="accType" name="accountType" required />
                <div class="invalid-feedback">Please provide an account type.</div>
            </div>
            <button type="submit" class="btn btn-success">Add Money</button>
        </form>
    </div>

    <div class="col-md-6">
        <form asp-action="SubtractMoney" method="post" class="needs-validation" novalidate>
            <div class="form-group">
                <label for="subtractAmount">Subtract Amount:</label>
                <input type="number" class="form-control" id="subtractAmount" name="amount" required />
                <div class="invalid-feedback">Please provide an amount.</div>
            </div>
            <div class="form-group">
                <label for="accType">Account Type:</label>
                <input type="text" class="form-control" id="accType" name="accountType" required />
                <div class="invalid-feedback">Please provide an account type.</div>
            </div>
            <button type="submit" class="btn btn-danger">Subtract Money</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Prevent form submission if fields are invalid
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}
